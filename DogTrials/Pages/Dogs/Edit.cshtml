@page
@model DogTrials.Pages.Dogs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Dog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dog.ID" />
            <div class="form-group">
                <label asp-for="Dog.RegisteredName" class="control-label"></label>
                <input asp-for="Dog.RegisteredName" class="form-control" />
                <span asp-validation-for="Dog.RegisteredName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.CallName" class="control-label"></label>
                <input asp-for="Dog.CallName" class="form-control" />
                <span asp-validation-for="Dog.CallName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Sex" class="control-label"></label>
                <select asp-for="Dog.Sex" asp-items="Html.GetEnumSelectList<Models.Sex>()" class="form-control"></select>
                <span asp-validation-for="Dog.Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.DateOfBirth" class="control-label"></label>
                <input asp-for="Dog.DateOfBirth" class="form-control" />
                <span asp-validation-for="Dog.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.RegistrationNumber" class="control-label"></label>
                <input asp-for="Dog.RegistrationNumber" class="form-control" />
                <span asp-validation-for="Dog.RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Breed" class="control-label"></label>
                <select asp-for="Dog.Breed" asp-items="Html.GetEnumSelectList<Models.Sex>()" class="form-control"></select>
                <span asp-validation-for="Dog.Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Owner" class="control-label"></label>
                <select asp-for="Dog.OwnerID" asp-items="@Model.PersonNameSL" class="form-control">
                    <option value="">-- Select Owner --</option>
                </select>
                <span asp-validation-for="Dog.OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
