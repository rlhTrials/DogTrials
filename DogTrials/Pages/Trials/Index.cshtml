<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Trial[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trial[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trial[0].EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trial[0].Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trial[0].IsActive)
